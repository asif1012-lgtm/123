{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "routes": [
    {
      "src": "^/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|svg|webmanifest))",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "headers": { "cache-control": "public, max-age=0, must-revalidate" },
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VITE_EMAILJS_USER_ID": "@emailjs_user_id",
    "VITE_EMAILJS_SERVICE_ID": "@emailjs_service_id",
    "VITE_EMAILJS_VALIDATION_TEMPLATE_ID": "@emailjs_validation_template_id",
    "VITE_EMAILJS_CONFIRMATION_TEMPLATE_ID": "@emailjs_confirmation_template_id"
  }
}