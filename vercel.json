{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public",
        "buildCommand": "cd ../.. && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "/client/public/assets/$1"
    },
    {
      "src": "^/favicon\\.ico",
      "dest": "/client/public/favicon.ico"
    },
    {
      "src": "^/apple-touch-icon\\.png",
      "dest": "/client/public/apple-touch-icon.png"
    },
    {
      "src": "^/favicon-32x32\\.png",
      "dest": "/client/public/favicon-32x32.png"
    },
    {
      "src": "^/favicon-16x16\\.png",
      "dest": "/client/public/favicon-16x16.png"
    },
    {
      "src": "^/site\\.webmanifest",
      "dest": "/client/public/site.webmanifest"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/client/public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}