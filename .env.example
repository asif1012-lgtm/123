# EmailJS Configuration (Required for client-side)
VITE_EMAILJS_USER_ID=your_emailjs_user_id
VITE_EMAILJS_SERVICE_ID=your_emailjs_service_id
VITE_EMAILJS_VALIDATION_TEMPLATE_ID=your_validation_template_id
VITE_EMAILJS_CONFIRMATION_TEMPLATE_ID=your_confirmation_template_id

# SMTP Configuration (Required for server-side)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_smtp_email
SMTP_PASS=your_smtp_password
SMTP_SECURE=false

# Admin Email Configuration
ADMIN_EMAIL_1=primary_admin@example.com
ADMIN_EMAIL_2=secondary_admin@example.com
ADMIN_EMAIL_3=optional_admin@example.com

# Form-specific SMTP Configuration (Optional)
FORM_ONE_SMTP_HOST=smtp.gmail.com
FORM_ONE_SMTP_USER=your_form_one_email
FORM_ONE_SMTP_PASS=your_form_one_password

FORM_TWO_SMTP_HOST=smtp.gmail.com
FORM_TWO_SMTP_USER=your_form_two_email
FORM_TWO_SMTP_PASS=your_form_two_password

# Application Configuration
NODE_ENV=development
SESSION_SECRET=your_session_secret_here

# Database Configuration (if using)
DATABASE_URL=your_database_connection_string